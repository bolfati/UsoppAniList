<html lang='en'>

  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Project Afterstory</title>
    <link rel='stylesheet' type='text/css' href='/css/jass.css' />
    <link rel='stylesheet' type='text/css' href='/css/style.css' />
  </head>

  <body>
    <header>
      <h1>Project Afterstory</h1>
    </header>
    <nav>
      <a href='/'>Home</a>

      <!-- If the user is logged in, show a logout button -->

      {{#if loggedIn}}
        <a href='/dashboard'>Dashboard</a>
        <button id='logout' class='btn-no-style'>Logout</button>
      {{else}}
        <!-- Otherwise, show a link to login -->
        <a href='/login'>Login</a>
      {{/if}}

    </nav>
    <main>

      <div class='blog'>

        {{{body}}}
      </div>

    </main>
    <!-- If the user is logged in, load the JS script for when they logout -->
    {{#if loggedIn}}
      <script src='/js/logout.js'></script>
    {{/if}}
    <footer>
      <script src='/js/login.js'></script>
      <script src='/js/logout.js'></script>
      <script src='/js/signup.js'></script>
    </footer>
  </body>

</html>